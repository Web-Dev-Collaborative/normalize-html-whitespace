{
  "name": "normalize-html-whitespace",
  "description": "Safely remove repeating whitespace from HTML text.",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Steven Vachon <contact@svachon.com> (https://svachon.com)",
  "repository": "github:stevenvachon/normalize-html-whitespace",
  "browser": "index-es5.js",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "chai": "^4.2.0",
    "mocha": "^6.1.4"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "prepublishOnly": "npm test && babel index.js --out-file=index-es5.js --presets=@babel/env --source-maps",
    "test": "mocha test.js --check-leaks --bail"
  },
  "files": [
    "index.js",
    "index-es5.js",
    "index-es5.js.map"
  ],
  "keywords": [
    "collapse",
    "compact",
    "condense",
    "html",
    "minify",
    "normalize",
    "remove",
    "space",
    "str",
    "string",
    "strip",
    "trim",
    "whitespace"
  ]
}
